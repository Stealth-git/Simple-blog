<h1><%= @article.title %></h1>
<p>
  <%= @article.text %>
</p>
<hr />
<h3>
  Comments:
</h3>

<p>
  <% @article.comments.each do |comment| %>
    <b>Name author: </b><%= comment.author %>
    <br />
    <b>Text: </b><%= comment.body %>
    <br />
    <b>Added at: </b><%= comment.created_at %>
    <br />
    <br />
  <% end %>
</p>
<hr />
<h3>Add comments: </h3>

  <%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <i>Author: </i><% if user_signed_in? %>
        <%= current_user.username %>
    <% end %>
  </p>
  <p>
    <%= f.label :body %> <br /> 
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
